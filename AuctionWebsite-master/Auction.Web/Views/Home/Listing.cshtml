@model Auction.Web.ViewsModels.AuctionsListingViewModels

<!-- Section-->
<section class="">
    <div class="container">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">


            @if (Model.Auctions != null && Model.Auctions.Count > 0)
            {
                foreach (var auction in Model.Auctions)
                {
                    var picURL = auction.AuctionPictures != null && auction.AuctionPictures.Count > 0 ?
                    "/Content/images/" + auction.AuctionPictures.First().Picture.URL : "https://dummyimage.com/320x150/dee2e6/6c757d.jpg";
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="@picURL" alt="..." style="height: 280px; object-fit: contain;" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@auction.Title</h5>
                                    <!-- Product price-->
                                    @auction.ActualAmount
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="@Url.Action("Details", "Auctions", new { ID = auction.ID })">Bid Now</a></div>
                            </div>

                            <a class="btn btn-primary" target="_blank" href="#" title="">
                                <i class="fa fa-tags"></i>
                                @auction.Category.Name
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <strong colspan="7" class="text-center">
                    No Result Found.
                </strong>
            }

        </div>
    </div>
</section>